<aura:component implements = "force:hasRecordId,flexipage:availableForAllPageTypes">
    <aura:attribute name="recordId" type="String" />
    <lightning:card>
        <div  class="slds-page-header slds-page-header_record-home">
            <div class="slds-summary-detail__title">
                <div class="slds-up-assistant__step-summary">
                    <div class="slds-media">
                        <div class="slds-media__body slds-m-top_x-small">
                            <div class="slds-media">
                                <div class="slds-setup-assistant__step-summary-content slds-media__body">
                                    <h3 class="slds-setup-assistant__step-summary-title slds-text-heading_small">
                                        
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slds-page-header__row slds-page-header__row_gutters" >
                <div class="slds-page-header__col-details">
                    <ul class="slds-page-header__detail-row">
                        <li class="slds-page-header__detail-block">
                            <div class="slds-text-title slds-truncate" title="Account Name">Data Inizio</div>
                           	<lightning:formattedDateTime value="" year="numeric" month="numeric" day="numeric" hour="2-digit"
                                 minute="2-digit"  hour12="false"/>
                        </li>
                        <li class="slds-page-header__detail-block">
                            <div class="slds-text-title slds-truncate" title="Account Name">Account Name</div>
                            <div class="slds-truncate" title="Account Name"></div>
                        </li>
                        <li class="slds-page-header__detail-block">
                            <div class="slds-text-title slds-truncate" title="Codice Fiscale">
                                Codice Fiscale
                            </div>
                            <div class="slds-truncate" title="Codice Fiscale"></div>
                        </li>
                        <li class="slds-page-header__detail-block">
                            <div class="slds-text-title slds-truncate" title="Partita Iva">Partita Iva</div>
                            <div class="slds-truncate" title="Partita Iva"></div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </lightning:card>

    <lightning:card>
        <li class="slds-setup-assistant__item">
            <article class="slds-setup-assistant__step">
                <div class="slds-summary-detail slds-is-open">
                    <div class="slds-container_fluid">
                        Selezione Fornitura
                        <div class="slds-summary-detail__content" id="step-0-summary-action">
                            <div class="slds-setup-assistant__step-detail">
                                <div class="slds-grid slds-gutters ">
                                    <div class="slds-col slds-size_3-of-12">
                                        <article class="slds-tile slds-tile_board slds-box">
                                    <!--     <c:hdtAdvancedSearch "
                                                                aura:id="supplySelection" supplyStatus="['Active']"
                                                                andConditions="{!v.andConditions}" multiSelection="true"
                                                                requiredValue="true"
                                                                companyDivision="{!v.companyDivisionId}"
                                                                onselected="{!c.handleSupplyResult}" >
                                            </c:hdtAdvancedSearch>
                                        -->
                                        </article>
                                    </div>
                                </div>
                            </div>
                            <div class="slds-float_right slds-m-top_medium">
                        <!--     <lightning:button disabled="{!or(v.step != 4,empty(v.opportunityServiceItems))}" variant="brand"
                                                aura:id="confirmStep4" name="confirmStep4"
                                                iconName="utility:right"
                                                label="{!$Label.c.Next}" onclick="{!c.nextStep}">
                                </lightning:button>
                                <aura:if isTrue="{!v.step > 4}">
                                    <lightning:button variant="brand" disabled="{!v.isClosed}" aura:id="returnStep4"
                                                    name="returnStep4"
                                                    label="{!$Label.c.Edit}" iconName="utility:edit"
                                                    onclick="{!c.previousStep}">
                                    </lightning:button>
                                </aura:if>
                                -->
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </li>
    </lightning:card>
</aura:component>

        <fields>
            <name>Vas_Generico_3</name>
            <fieldText>&lt;p&gt;&lt;b style=&quot;font-size: 14px; background-color: rgb(255, 255, 255); color: rgb(62, 62, 60);&quot;&gt;[6. Conferma Adesione VAS]&lt;/b&gt;&lt;/p&gt;</fieldText>

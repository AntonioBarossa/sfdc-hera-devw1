<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>HDT Custom Picklist</masterLabel>
    <description>This is a custom picklist used on the Flows</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" type="String" label="Label Combobox" description="Label Combobox" role="inputOnly"/>
            <property name="value" type="String" label="Default Value" description="Default Value" role="inputOnly"/>
            <property name="placeholder" type="String" label="placeholder" description="placeholder" role="inputOnly"/>
            <property name="options" type="String" label="List Options" description="List Options" role="inputOnly"/>
             
            <property name="outcome" type="String" label="outcome" description="outcome" role="outputOnly"/>
            <property name="required" type="Boolean" label="required" description="required" role="inputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>

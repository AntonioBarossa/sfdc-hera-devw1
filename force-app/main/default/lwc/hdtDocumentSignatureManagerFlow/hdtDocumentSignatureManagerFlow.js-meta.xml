<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="processType" type="String" label="Tipo Processo" description="Tipologia del processo" role="inputOnly"/>
            <property name="quoteType" type="String" label="Tipo Preventivo" description="Tipologia del preventivo" role="inputOnly"/>
            <property name="nextLabel" type="String" label="Next Label" description="Label next Button" role="inputOnly" default="Conferma Pratica"/>
            <property name="nextVariant" type="String" label="Next Variant" description="Variant del next Button" role="inputOnly" default="success"/>
            <property name="cancelButton" type="Boolean" label="Cancel Button" description="Cancel Button" role="inputOnly"/>
            <property name="outcome" type="String" label="outcome" description="outcome" role="outputOnly"/>
            <property name="cancelCase" type="Boolean" label="cancelCase" description="if true case has to be cancelled" role="outputOnly"/>
            <property name="recordId" type="String" label="Record Id" description="Record Id" role="inputOnly"/>
            <property name="accountId" type="String" label="Account Id" description="Account Id" role="inputOnly"/>
            <property name="source" type="String" label="Source" description="Source" role="inputOnly"/>
            <property name="disableSignMode" type="Boolean" label="Disable Sign Mode" description="Disable Sign Mode field" role="inputOnly"/>
            <property name="entryChannel" type="String" label="Entry Channel (Reclami)" description="Entry Channel (Reclami)" role="inputOnly"/>
            <property name="discardRework" type="String" label="Discard Rework" description="Discard Rework" role="inputOnly" default="false"/>
            <property name="discardActivityId" type="String" label="Discard Activity Id" description="Discard Activity Id" role="inputOnly" default=""/>
            <property name="isAmbiente" type="String" label="Is Ambiente?" description="Pass true if TARI or TCP" role="inputOnly" default="false"/>
            <property name="skipDocumentalPhase" type="String" label="Skip Documental Phase" description="If true skip documental Phase" role="OutputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>

        <targetConfig targets="lightning__FlowScreen">
            <property name="accountId" type="String" role="inputOnly"/>
            <property name="theCase" type="@salesforce/schema/Case"/>
            <property name="account" type="@salesforce/schema/Account" role="inputOnly"/>
            <property name="saveInDraft" type="Boolean" label="Save in Draft" description="Is true if the user press the Draft Button" role="outputOnly"/>
            <property name="cancelCase" type="Boolean" label="Cancellation" description="Is true if the user press the Cancel Button" role="outputOnly"/>
        </targetConfig>

    </targetConfigs>
</LightningComponentBundle>
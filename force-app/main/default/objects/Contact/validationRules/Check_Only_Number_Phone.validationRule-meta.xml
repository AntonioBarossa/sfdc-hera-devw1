<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Only_Number_Phone</fullName>
    <active>true</active>
    <errorConditionFormula>IF(
				AND(
								CONTAINS($CustomMetadata.HDT_AutomationToggle__mdt.HDT_TRH_Contact.SkipUsernames__c, $User.Username), 
								OR(ISNULL($CustomMetadata.HDT_AutomationToggle__mdt.HDT_TRH_Contact.SkipDueDateTime__c),
											DATETIMEVALUE(NOW()) &lt; DATETIMEVALUE($CustomMetadata.HDT_AutomationToggle__mdt.HDT_TRH_Contact.SkipDueDateTime__c)										
									)
				),false,
    NOT(REGEX( Phone , &quot;^[0-9]*$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Il numero di telefono fisso pu√≤ contenere solo numeri</errorMessage>
</ValidationRule>

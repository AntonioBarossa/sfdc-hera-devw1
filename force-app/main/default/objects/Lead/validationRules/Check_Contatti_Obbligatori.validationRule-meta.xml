<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Contatti_Obbligatori</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(OR(ISPICKVAL(LeadSource, &quot;Facebook&quot;),ISPICKVAL(LeadSource, &quot;Instagram&quot;),ISPICKVAL(LeadSource, &quot;Twitter&quot;),ISPICKVAL(LeadSource, &quot;YouTube&quot;))),ISBLANK(MobilePhone),AND(ISBLANK(Email),ISBLANK(Phone)))</errorConditionFormula>
    <errorMessage>Deve essere popolato uno dei seguenti campi : “Cellulare” , “Email”,&quot;Telefono Fisso&quot;</errorMessage>
</ValidationRule>

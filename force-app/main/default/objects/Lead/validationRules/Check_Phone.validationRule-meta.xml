<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_Phone</fullName>
    <active>true</active>
    <errorConditionFormula>IF(ISBLANK(Phone),false, if(AND(BEGINS(Phone,&apos;0&apos;) ,REGEX(Phone, &quot;[0-9]{10,12}&quot;)),false,true))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Lunghezza Numero Fisso Deve essere di minimo 6 e massimo 11 cifre e deve iniziare con &quot;0&quot;</errorMessage>
</ValidationRule>
